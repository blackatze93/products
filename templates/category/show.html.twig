{% extends 'base.html.twig' %}

{% block title %}Categoría{% endblock %}

{% block content %}
    <h1>Categoría</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Activa</th>
                <td>{{ category.active ? 'Sí' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creada</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actualizada</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">regresar al listado</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">editar</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
