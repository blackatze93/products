{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block content %}
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Código</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Creado</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actualizado</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">regresar al listado</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">editar</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
